# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# BASE DE DATOS
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_NAME=carpinteria_db

# ============================================
# SEGURIDAD JWT
# ============================================
JWT_SECRET=tu-clave-secreta-muy-segura-minimo-32-caracteres-aleatorios
JWT_EXPIRES_IN=24h

# ============================================
# CORS - Frontend URL
# ============================================
# Desarrollo local
CORS_ORIGIN=http://localhost:5173

# Producción (Descomenta y ajusta para Render/Vercel)
# CORS_ORIGIN=https://tu-frontend.vercel.app

# ============================================
# RATE LIMITING
# ============================================
# Ventana de tiempo en milisegundos (15 minutos = 900000ms)
RATE_LIMIT_WINDOW_MS=900000

# Máximo de requests por ventana
# Desarrollo: 100-500
# Producción: 1000-5000 (según tráfico esperado)
RATE_LIMIT_MAX_REQUESTS=1000
